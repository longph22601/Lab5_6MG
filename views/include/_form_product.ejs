<!-- form handling -->
<form
  action="/api/product"
  method="POST"
  id="add_user"
  enctype="multipart/form-data"
>
  <div class="mb-3">
    <label for="name">Tên sản phẩm</label>
    <input
      type="text"
      name="tensp"
      class="form-control form-control-lg"
      placeholder="Enter tên sản phẩm"
      required
    />
  </div>
  <div class="mb-3">
    <label for="username">Mã sản phẩm</label>
    <input
      type="text"
      name="masp"
      class="form-control form-control-lg"
      placeholder="Enter mã sản phẩm"
      required
    />
  </div>
  <div class="mb-3">
    <label for="username">Đơn giá</label>
    <input
      type="text"
      name="dongia"
      class="form-control form-control-lg"
      placeholder="Enter đơn giá"
      required
    />
  </div>
  <div class="mb-3">
    <label for="username">Màu sắc</label>
    <input
      type="text"
      name="mausac"
      class="form-control form-control-lg"
      placeholder="Enter màu sắc"
      required
    />
  </div>
  <div class="mb-3">
    <label for="username">Số lượng</label>
    <input
      type="text"
      name="soluong"
      class="form-control form-control-lg"
      placeholder="Enter số lượng"
      required
    />
  </div>
  <div class="mb-3">
    <label for="pwd">Trạng thái</label>
    <input
      type="text"
      name="trangthai"
      class="form-control form-control-lg"
      placeholder="Enter trạng thái"
      required
    />
  </div>
  <div class="mb-3">
    <label for="pwd">Mô tả</label>
    <input
      type="text"
      name="mota"
      class="form-control form-control-lg"
      placeholder="Enter mô tả"
      required
    />
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Select Image</label>
    <input
      type="file"
      name="image"
      class="form-control form-control-lg"
      required
    />
  </div>
  <div class="mb-3 d-grid">
    <input
      type="submit"
      name="submit"
      value="Add User"
      class="btn btn-success btn-lg"
    />
  </div>
</form>
